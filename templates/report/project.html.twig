{% extends 'base.html.twig' %}

{% import 'macro.html.twig' as mymacro %}

{% block title %}{{ parent() }} - Gérer les projets{% endblock %}

{% block content_title %}<i class="fas fa-project-diagram"></i> Gérer les projets{% endblock %}
{% block content_subtitle %}(Travaux, voyages, ...){% endblock %}


{% block content %}

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">

                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Liste des projets</h3>
                        <div class="card-tools"><a href="{{ path('report_project__create') }}" class="btn btn-sm btn-success" data-toggle="olix-modal" data-target="#modalOlix"><i class="fas fa-plus"></i> <span class="d-none d-md-inline">Ajouter un projet</span></a></div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Nom</th>
                                    <th>Catégorie</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-right">Coût total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for item in projects %}
                                <tr>
                                    <td>{{ item.0.startedAt|date('d/m/Y') }}</td>
                                    <td><b>{{ item.0.name }}</b></td>
                                    <td>{{ item.0.category.label }}</td>
                                    <td class="align-middle text-center">{{ item.0.stateBadge|raw }}</td>
                                    <td class="text-center">{{ item.number }}</td>
                                    <td class="text-right">{{ mymacro.money(item.total|abs, 'EUR', false) }}</td>
                                    <td class="text-right">
                                        <a href="{{ path('report_project__item', {'id': item.0.id}) }}" class="btn btn-sm btn-primary"><b><i class="fas fa-eye"></i><span class="d-none d-md-inline">&nbsp;Visualiser<span></b></a>
                                        <a href="{{ path('report_project__edit', {'id': item.0.id}) }}" class="btn btn-sm btn-info" data-toggle="olix-modal" data-target="#modalOlix"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Modifier<span></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun éléments dans la table</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>

    </div>


    {% include '@OlixBackOffice/Include/modal.html.twig' with { title: "Chargement du formulaire" } %}

{% endblock %}
