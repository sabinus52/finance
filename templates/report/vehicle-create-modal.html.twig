{% form_theme form '@OlixBackOffice/Twig/form-theme-horizontal-layout.html.twig' %}
{{ form_start(form) }}
    <div class="modal-header">
        <h4 class="modal-title">Achat d'un nouveau véhicule</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="pills-vehicle-tab" data-toggle="pill" data-target="#pills-vehicle" type="button" role="tab" aria-controls="pills-vehicle" aria-selected="true"><i class="fas fa-car"></i> Information du véhicule</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="pills-transaction-tab" data-toggle="pill" data-target="#pills-transaction" type="button" role="tab" aria-controls="pills-transaction" aria-selected="false"><i class="fas fa-euro-sign"></i> Transcation du financement</button>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-vehicle" role="tabpanel" aria-labelledby="pills-vehicle-tab">{{ form_widget(form.vehicle) }}</div>
            <div class="tab-pane fade" id="pills-transaction" role="tabpanel" aria-labelledby="pills-transaction-tab">{{ form_widget(form.transaction) }}</div>
        </div>
        {{ form_rest(form) }}
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Fermer</button>
        {% if form.vars.value is empty %}
            <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> {{ modal.btnlabel|default('Ajouter')}}</button>
        {% else %}
            <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> {{ modal.btnlabel|default('Modifier')}}</button>
        {% endif %}
    </div>
{{ form_end(form) }}