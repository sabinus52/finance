{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Gérer les bénéficiaires{% endblock %}

{% block content_title %}<i class="fas fa-users"></i> Gérer les bénéficiaires{% endblock %}
{% block content_subtitle %}(Tiers, marchands, ...){% endblock %}

{% block javascripts %}
{{ parent()}}
{{ olixbo_datatable_js(datatable) }}
{% endblock %}


{% block content %}

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">

                <div class="card card-info card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Liste des bénéficiaires</h3>
                        <div class="card-tools"><a data-remote="{{ path('manage_recipient__create') }}" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modalForm"><i class="fas fa-plus"></i> <span class="d-none d-md-inline">Ajouter un bénéficiaire</span></a></div>
                    </div>
                    <div class="card-body">
                        {{ olixbo_datatable_html(datatable) }}
                    </div>
                </div>

            </div>
        </div>

    </div>


    <div class="modal fade" id="modalForm">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Chargement du formulaire</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <p class="text-center"><img alt="" src="{{ asset('bundles/olixbackoffice/images/spinner-rectangle.gif') }}"></p>
                </div>
            </div>
        </duv>
    </div>

{% endblock %}
