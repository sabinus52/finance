{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Gérer les catégories{% endblock %}

{% block content_title %}<i class="fas fa-layer-group"></i> Gérer les catégories{% endblock %}
{% block content_subtitle %}des dépenses et revenus{% endblock %}

{% block javascripts %}
{{ parent()}}

<script>

</script>
{% endblock %}


{% block content %}

    <div class="container-fluid">

        <div class="row">

            <div class="col-md-6">
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Catégories des revenus</h3>
                        <div class="card-tools"><a data-remote="{{ path('manage_category__create1', { type: 1 }) }}" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modalForm"><i class="fas fa-plus"></i> <span class="d-none d-md-inline">Ajouter une catégorie</span></a></div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <tbody>
                            {% for item in recettes %}
                                <tr>
                                    <td><b>{{ item.name }}<b></td>
                                    <td class="text-right">
                                        <a data-remote="{{ path('manage_category__create2', {'id': item.id}) }}" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Ajouter une sous catégorie<span></a>
                                        <a data-remote="{{ path('manage_category__edit', {'id': item.id}) }}" class="btn btn-sm btn-info" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Modifier<span></a>
                                    </td>
                                </tr>
                                {% for row in item.children %}
                                    <tr>
                                        <td><i class="pl-3">{{ row.name }}</i></td>
                                        <td class="text-right">
                                            <a data-remote="{{ path('manage_category__edit', {'id': row.id}) }}" class="btn btn-sm btn-info" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Modifier<span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun éléments dans la table</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Catégories des dépenses</h3>
                        <div class="card-tools"><a data-remote="{{ path('manage_category__create1', { type: 0 }) }}" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modalForm"><i class="fas fa-plus"></i> <span class="d-none d-md-inline">Ajouter une catégorie</span></a></div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <tbody>
                            {% for item in depenses %}
                                <tr>
                                    <td><b>{{ item.name }}<b></td>
                                    <td class="text-right">
                                        <a data-remote="{{ path('manage_category__create2', {'id': item.id}) }}" class="btn btn-sm btn-success" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Ajouter une sous catégorie<span></a>
                                        <a data-remote="{{ path('manage_category__edit', {'id': item.id}) }}" class="btn btn-sm btn-info" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Modifier<span></a>
                                    </td>
                                </tr>
                                {% for row in item.children %}
                                    <tr>
                                        <td><i class="pl-3">{{ row.name }}</i></td>
                                        <td class="text-right">
                                            <a data-remote="{{ path('manage_category__edit', {'id': row.id}) }}" class="btn btn-sm btn-info" data-toggle="modal" data-target="#modalForm"><i class="fas fa-edit"></i><span class="d-none d-md-inline">&nbsp;Modifier<span></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucun éléments dans la table</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>


    <div class="modal fade" id="modalForm">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Chargement du formulaire</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <p class="text-center"><img alt="" src="{{ asset('bundles/olixbackoffice/images/spinner-rectangle.gif') }}"></p>
                </div>
            </div>
        </duv>
    </div>

{% endblock %}
